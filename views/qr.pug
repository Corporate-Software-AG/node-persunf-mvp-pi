script.
    const uuid = document.getElementById("uuid").innerHTML
    const url = "https://mvp-persunf.azurewebsites.net/form/" + uuid
    const qrCode = new QRCodeStyling({
        width: 280,
        height: 280,
        data: url,
        image: "https://mvppersunf.blob.core.windows.net/images/Logo-Schweiz.png",
        dotsOptions: {
        color: "#ff0000",
        type: "dots"
        },
    });
    qrCode.append(document.getElementById("qr"));

    function checkStatusAndRedirect() {
        fetch('/status')
        .then((response) => response.json())
        .then((data) => {
            console.log(data);
            if( data.complete) {
                window.location.replace("/");
            };
        }).catch((err) => console.warn('Something went wrong.', err));
    }

    function loop() {         
        setTimeout(() => {   
            checkStatusAndRedirect()
            loop();
        }, 1000)
    }
    loop();

