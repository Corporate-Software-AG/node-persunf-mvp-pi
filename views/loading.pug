script.
    function checkStatusAndRedirect() {
        fetch('/status')
        .then((response) => response.json())
        .then((data) => {
            if( data != "") {
                window.location.reload();
            };
        }).catch((err) => console.warn('Something went wrong.', err));
    }

    function loop() {         
        setTimeout(() => {   
            checkStatusAndRedirect()
            loop();
        }, 500)
    }
    loop();