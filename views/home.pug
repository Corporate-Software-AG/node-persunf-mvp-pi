html 
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        title= title
        meta(name='viewport', content='width=device-width, initial-scale=1')
    body
        header 
            .container.p-3
                p.logo
                    img(src="https://mvppersunf.blob.core.windows.net/images/Logo-Schweizerische-Eidgenossenschaft.png")
        section 
            div(class="container") 
                h1= "QR"
                p(id="uuid")= uuid
                a(href="https://mvp-persunf.azurewebsites.net/form/" + uuid) 
                    div(id="qr")
        script(src='https://unpkg.com/qr-code-styling/lib/qr-code-styling.js')
script.
  const uuid = document.getElementById("uuid").innerHTML
  const url = "https://mvp-persunf.azurewebsites.net/form/" + uuid
  const qrCode = new QRCodeStyling({
    width: 400,
    height: 400,
    data: url,
    image: "https://mvppersunf.blob.core.windows.net/images/Logo-Schweiz.png",
    dotsOptions: {
      color: "#ff0000",
      type: "dots"
    },
  });
  qrCode.append(document.getElementById("qr"));
style. 
    .container {
        text-align: center
    }
    .logo {
        text-align: right;
    }
    img {
        max-width: 100%;
    }