html 
    head
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        title= title
        meta(name='viewport', content='width=device-width, initial-scale=1')
    body
        header 
            .container.p-3
                p.logo
                    img(src="https:///" + device.strgName + ".blob.core.windows.net/images/Logo-Schweizerische-Eidgenossenschaft.png")
        section 
            div(class="container") 
                p.error= message

                img#cosologo(src="https://cosoweb.blob.core.windows.net/images/logo.png")
        p(id="strgName")= device.strgName
        script(src='https://unpkg.com/qr-code-styling/lib/qr-code-styling.js')

script.
    const strgName = document.getElementById("strgName").innerHTML;

    function loop() {         
        setTimeout(() => {   
            window.location.reload();
            loop();
        }, 500)
    }
    loop();

style.
    #cosologo {
        position: fixed;
        bottom:.5em;
        left: .5em;
        width: 12em;
    }
    #strgName {
        display: none;
    }
    .container {
        text-align: center
    }
    .logo {
        text-align: right;
    }
    img {
        width: 12em;
    }
    p {
        color: black;
        margin: 0;
        padding: 0;
    }
    .error {
        color: red;
        font-weight: 800;
    }

